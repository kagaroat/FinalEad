            console.log((($(this).children('.option').length) * $(this).children('.option').height()) * (adjust) + 40 + 'px');

            $(this).animate({
                'height': (($(this).children('.option').length) * $(this).children('.option').height()) * (adjust) + 40 + 'px'
            }, 100);
            $(this).toggleClass('collapsed');
        });

